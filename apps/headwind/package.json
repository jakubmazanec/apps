{
  "name": "headwind",
  "version": "0.1.2",
  "private": true,
  "description": "Age of Sail rogue-like deck-building game.",
  "repository": {
    "type": "git",
    "url": "git@github.com:jakubmazanec/apps.git",
    "directory": "apps/headwind"
  },
  "license": "AGPL-3.0-only",
  "author": "Jakub Mazanec <jakub@mazanec.dev>",
  "type": "module",
  "scripts": {
    "build": "del-cli build && react-router build",
    "clean": "del-cli coverage build *.tsbuildinfo",
    "codegen": "react-router typegen",
    "deploy": "flyctl deploy ../.. --config apps/headwind/fly.toml",
    "develop": "react-router dev --port 5000",
    "format": "prettier . --write --ignore-unknown",
    "lint": "eslint .",
    "start": "cross-env NODE_ENV=production PORT=5000 react-router-serve ./build/server/index.js",
    "test": "del-cli coverage && vitest run --coverage --passWithNoTests",
    "typecheck": "tsc --project tsconfig.typecheck.json"
  },
  "dependencies": {
    "@jakubmazanec/ts-utils": "^3.0.14",
    "@jakubmazanec/zod-utils": "^2.0.13",
    "@react-router/express": "^7.6.3",
    "@react-router/fs-routes": "^7.6.3",
    "@react-router/node": "^7.6.3",
    "@react-router/serve": "^7.6.3",
    "cross-env": "^7.0.3",
    "isbot": "^5.1.28",
    "lodash": "^4.17.21",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router": "^7.6.3",
    "zod": "^4.0.0"
  },
  "devDependencies": {
    "@jakubmazanec/eslint-config": "^4.1.7",
    "@react-router/dev": "^7.6.3",
    "@tailwindcss/vite": "^4.1.11",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/lodash": "^4.17.19",
    "@types/node": "^24.0.7",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitest/coverage-v8": "^3.2.4",
    "del-cli": "^6.0.0",
    "eslint": "^9.30.0",
    "happy-dom": "^18.0.1",
    "prettier": "^3.6.2",
    "prettier-plugin-packagejson": "^2.5.17",
    "prettier-plugin-tailwindcss": "^0.6.13",
    "tailwindcss": "^4.1.11",
    "typescript": "^5.8.3",
    "vite": "^6.3.5",
    "vitest": "^3.2.4"
  },
  "packageManager": "npm@11.4.2",
  "engines": {
    "node": "^24.3.0",
    "npm": "^11.4.2"
  }
}
