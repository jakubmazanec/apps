{
  "name": "riffle",
  "version": "0.1.1",
  "private": true,
  "description": "A rogue-like deck-building game with letters and words.",
  "repository": {
    "type": "git",
    "url": "git@github.com:jakubmazanec/apps.git",
    "directory": "apps/riffle"
  },
  "license": "AGPL-3.0-only",
  "author": "Jakub Mazanec <jakub@mazanec.dev>",
  "type": "module",
  "scripts": {
    "build": "del-cli build && react-router build",
    "clean": "del-cli coverage build *.tsbuildinfo",
    "codegen": "react-router typegen",
    "deploy": "flyctl deploy ../.. --config apps/riffle/fly.toml",
    "develop": "react-router dev --port 5000",
    "format": "prettier . --write --ignore-unknown",
    "lint": "eslint .",
    "start": "cross-env NODE_ENV=production PORT=5000 react-router-serve ./build/server/index.js",
    "test": "del-cli coverage && vitest run --coverage --passWithNoTests",
    "typecheck": "tsc --project tsconfig.typecheck.json"
  },
  "dependencies": {
    "@jakubmazanec/ts-utils": "^3.0.15",
    "@react-router/express": "^7.8.0",
    "@react-router/fs-routes": "^7.8.0",
    "@react-router/node": "^7.8.0",
    "@react-router/serve": "^7.8.0",
    "cross-env": "^10.0.0",
    "isbot": "^5.1.30",
    "lodash": "^4.17.21",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-router": "^7.8.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@jakubmazanec/eslint-config": "^4.1.8",
    "@react-router/dev": "^7.8.0",
    "@tailwindcss/vite": "^4.1.12",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^16.3.0",
    "@types/lodash": "^4.17.20",
    "@types/node": "^24.2.1",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@vitest/coverage-v8": "^3.2.4",
    "autoprefixer": "^10.4.20",
    "del-cli": "^6.0.0",
    "eslint": "^9.33.0",
    "happy-dom": "^18.0.1",
    "prettier": "^3.6.2",
    "prettier-plugin-packagejson": "^2.5.19",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "tailwindcss": "^4.1.12",
    "typescript": "^5.9.2",
    "vite": "^7.0.0",
    "vitest": "^3.2.4"
  },
  "packageManager": "npm@11.4.2",
  "engines": {
    "node": "^24.5.0",
    "npm": "^11.4.2"
  }
}
